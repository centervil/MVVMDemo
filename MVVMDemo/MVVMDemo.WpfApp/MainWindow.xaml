<Window x:Class="MVVMDemo.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMDemo.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="50">
        <Button Content="Get Now Time" Command="{Binding GetNowTime}" Width="200"/>
        <Border BorderBrush="Blue" BorderThickness="2" Width="200" Margin="10,0,0,0">
            <TextBlock Text="{Binding NowTimeText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </StackPanel>
</Window>
